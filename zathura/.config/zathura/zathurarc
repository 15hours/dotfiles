set selection-clipboard clipboard

set page-padding 15

set scroll-page-aware "true"
set smooth-scroll "true"
set scroll-full-overlap 0.01
set scroll-step 70

set font "inconsolata 11"
set sandbox none
set window-title-basename "true"

set guioptions none
set selection-notification false

#

map v scroll up
map c scroll down

map u scroll half-up
map r scroll half-up

map d scroll half-down
map n scroll half-down

map e scroll full-up
map s scroll full-down

map D toggle_page_mode
map R rotate

map , scroll full-up
map . scroll full-down

map <C--> zoom out
map <C-=> zoom in

#

